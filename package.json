{
  "name": "mindvault-os",
  "version": "1.0.0",
  "description": "Local-only encrypted productivity system with keystroke memory, clipboard history, terminal recorder, and secure AutoFill",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "better-sqlite3": "^9.2.2",
    "@noble/hashes": "^1.3.3",
    "argon2": "^0.31.2",
    "ioredis": "^5.3.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "electron": "^28.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "node-global-key-listener": "^0.1.1",
    "clipboardy": "^4.0.0",
    "node-pty": "^1.0.0",
    "robotjs": "^0.6.0",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0-rc.12",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "date-fns": "^3.0.6",
    "lucide-react": "^0.298.0",
    "zustand": "^4.4.7",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mindvault.os",
    "productName": "MindVault OS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
